{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch viewer.exe",
      "type": "cppvsdbg",
      "request": "launch",
      "program": "${workspaceFolder}\\code\\bin\\viewer.exe",
      "args": [
        "--scene",
        "report\\examples\\materials.s72",
        // "--camera",
        // "Arm-Camera",
        "--print",
        "--lambertian",
        "code\\ox_bridge_morning_lambertian.png",
        "--exposure",
        "1.0",
      ],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",

      // run the COMSPEC /k "vcvars64.bat" && node maekfile.js part first
      //"preLaunchTask": "build-with-node"
    },
    {
      "name": "Launch cube.exe",
      "type": "cppvsdbg",
      "request": "launch",
      "program": "${workspaceFolder}\\code\\bin\\cube.exe",
      "args": [
        "report\\examples\\ox_bridge_morning.4.png",
        "--lambertian",
        "env_lambertian_out.png",
        // "Arm-Camera",
        // "--print"
      ],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",

      // run the COMSPEC /k "vcvars64.bat" && node maekfile.js part first
      //"preLaunchTask": "build-with-node"
    }
  ],

  "tasks": {
    "version": "2.0.0",
    "tasks": [
      {
        "label": "build-with-node",
        "type": "shell",
        "command": "%comspec%",
        "args": [
          "/k",
          "\"C:\\Program Files\\Microsoft Visual Studio\\2022\\Community\\VC\\Auxiliary\\Build\\vcvars64.bat\"",
          "&&",
          "node",
          "code\\maekfile.js"
        ],
        "options": {
          "cwd": "${workspaceFolder}"
        },
        "problemMatcher": []
      }
    ]
  }
}